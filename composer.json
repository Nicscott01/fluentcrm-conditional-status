{
  "name": "nicscott01/fluentcrm-conditional-status",
  "version": "1.0.0",
  "description": "Conditionally set FluentCRM subscriber status based on FluentForms field values",
  "type": "wordpress-plugin",
  "keywords": [
    "wordpress",
    "plugin",
    "fluentcrm",
    "fluentforms",
    "email-marketing",
    "gdpr",
    "double-opt-in",
    "subscriber-status"
  ],
  "homepage": "https://github.com/Nicscott01/fluentcrm-conditional-status",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Nic Scott",
      "homepage": "https://www.crearewebsolutions.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer/installers": "^1.0 || ^2.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1"
  },
  "scripts": {
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "lint": "phpcs --standard=WordPress .",
    "format": "phpcbf --standard=WordPress ."
  },
  "support": {
    "issues": "https://github.com/Nicscott01/fluentcrm-conditional-status/issues",
    "source": "https://github.com/Nicscott01/fluentcrm-conditional-status"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
